{
  "compilerOptions": {
    "module": "ES6",
    "target": "es6",
    "sourceMap": true,
    "downlevelIteration": true,
    "moduleResolution" : "node",
    "strictNullChecks": true,
    "checkJs": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "Frontend/*": ["src/frontend/*"],
      "Utils/*": ["src/frontend/utils/*"],
      "Games/*": ["src/frontend/games/*"],
      "Icebreaker/*": ["src/frontend/games/Icebreaker/*"]
    },
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/frontend/*"],
  "exclude": [
    "node_modules",
    "public",
    "src/backend",
    "./dist/**/*",
  ]
}