{
  "compilerOptions": {
    "module": "ES6",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "downlevelIteration": true,
    "moduleResolution" : "node",
    "baseUrl": ".",
    "paths": {
      "Frontend/*": ["src/frontend/*"],
      "Utils/*": ["src/frontend/utils/*"],
      "Games/*": ["src/frontend/games/*"],
      "Icebreaker/*": ["src/frontend/games/Icebreaker/*"]
    }
  },
  "include": ["src/frontend"],
  "exclude": [
    "node_modules",
    "public",
    "src/backend"
  ]
}